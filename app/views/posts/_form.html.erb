<div class="">
  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div>
        <h3>You can't save this post because of <%= pluralize(@post.errors.count, 'error') %>:</h3>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <p>
      <%= f.label :title, 'Title:', class: 'font-weight-bold text-info' %><br>
      <%= f.text_field :title, class: 'w-100 form-control' %>
    </p>

    <p>
      <%= f.label :body, 'Body:', class: 'font-weight-bold text-info' %><br>
      <%= f.text_area :body, class: 'w-100 form-control h-100', rows: 7 %>
    </p>

    <p>
      <%= f.submit 'Save', class: 'btn btn-success btn-block form-control' %>
    </p>
    
  <% end %>
</div>