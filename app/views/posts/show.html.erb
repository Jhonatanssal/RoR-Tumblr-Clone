<div class="card shadow">
  <h1 class="card-header text-center">
    <%= @post.title %>
  </h1>

  <div class="card-body">
    <p class="card-text">
      <%= @post.body %>
    </p>
    <div class="text-center">
      <button class="btn btn-outline-info col-3">
      <%= link_to 'Back', root_path, class: 'text-muted' %>
      </button>
      <button class="btn btn-outline-warning col-3">
        <%= link_to 'Edit', edit_post_path(@post), class: 'text-muted' %>
      </button>
      <button class="btn btn-outline-danger col-3">
        <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are yo sure?' }, class: 'text-muted' %>
      </button>
    </div>
  </div>

  <div class="card-footer text-muted text-center">
    <small>Submitted <%= time_ago_in_words(@post.created_at) %> ago.</small>
  </div>
</div>