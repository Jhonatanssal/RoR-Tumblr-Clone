<div id="header">
  <h2 class="font-weight-bold text-secondary text-center">Posts Feed</h2>
</div>
<div class="button">
  <% if user_signed_in? %>
    <button class="btn btn-info btn-block"><%= link_to 'Make Post', new_post_path, class: 'text-white' %></button>
  <% end %>
</div><br>
<% @posts.each do |post| %>
  <div class="post_wrapper card text-center shadow mb-2">
    <p class="card-header text-secondary">Post <%= post.id %></p>
    <div class="card-body">
      <h2 class="title card-title"><%= link_to post.title, post %> </h2>
      <p class="card-text text-muted"><%= truncate(post.body, length: 60) %></p>
      <% if user_signed_in? %>
        <div class="text-center">
          <button class="btn btn-outline-warning col-4">
            <%= link_to 'Edit', edit_post_path(post), class: 'text-muted' %>
          </button>
          <button class="btn btn-outline-danger col-4">
            <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?'}, class: 'text-muted' %>
          </button>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
        <%= time_ago_in_words(post.created_at) %> ago.
    </div>
  </div>
<% end %>