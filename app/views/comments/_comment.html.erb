<div class="card comment-content">
  <div class="card-header comment-name">
    Comment: <%= comment.id %>
  </div>
  <div class="card-body">
    <h5 class="card-title font-weight-bold"><%= comment.name %></h5>
    <p class="card-text text-secondary"><em>"<%= comment.body%>."</em></p>
    <% if user_signed_in? %>
      <button class="btn btn-outline-danger">
        <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure' }, class: 'text-secondary' %>
      </button>
    <% end %>
  </div>
  <div class="card-footer text-muted text-center">
    <small><%= time_ago_in_words(comment.created_at)%> ago.</small>
  </div>
</div>
