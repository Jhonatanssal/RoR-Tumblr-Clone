<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :name, 'Name:' %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :body, 'Body:' %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </p>

  <p>
    <%= f.submit 'Submit', class: 'btn btn-success' %>
  </p>
<% end %>